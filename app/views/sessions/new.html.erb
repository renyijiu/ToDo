<h1>登录</h1>

<form class="form-horizontal" method="post">
    <%= form_for(:session, url: login_path) do |f| %>
    <div class="form-group">
        <%= f.label :username, class: 'col-sm-2 control-label' %>
        <div class="col-sm-6">
            <%= f.text_field :username, class: 'form-control', placeholder: '请输入邮箱或者用户名，不包含空格' %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :password, class: 'col-sm-2 control-label' %>
        <div class="col-sm-6">
            <%= f.password_field :password, class: 'form-control', placeholder: '请输入密码' %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-6">
            <div class="checkbox">
                <%= f.label :remember_me do %>
                <%= f.check_box :remember_me %>
                <span>记住我</span>
                <% end %>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-6">
            <%= f.submit "登录", class: "btn btn-primary" %>
        </div>
    </div>

    <% end %>
</form>
